  <%= f.label :email, 'Email Address' %>
  <%= f.text_field :email %>
</div>
<div class='field'>
  <%= f.label :tel, 'Phone Number' %>
  <%= f.text_field :tel %>
</div>
<div class='field'>
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>
<div class='field'>
