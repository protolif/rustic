<h1>Editing <%= "#{@user.fname} #{@user.lname}" %></h1>

<div id="gravatar">
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails" target="_blank">Change Avatar</a>
</div>
<br />
<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class='field'>
    <%= f.label :fname, 'First Name' %><br />
    <%= f.text_field :fname %>
  </div>
  <div class='field'>
    <%= f.label :lname, 'Last Name' %><br />
    <%= f.text_field :lname %>
  </div>
  <div class='field'>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class='field'>
    <%= f.label :tel, 'Phone Number' %><br />
    <%= f.text_field :tel %>
  </div>
  <div class='field'>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation, 'Confirmation' %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class='actions'>
    <%= f.submit 'Update' %>
  </div>
<% end %>