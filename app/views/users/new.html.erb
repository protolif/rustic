<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
  <div class='field'>
    <%= f.label :fname, 'First Name' %><br />
    <%= f.text_field :fname %>
  </div>
  <div class='field'>
    <%= f.label :lname, 'Last Name' %><br />
    <%= f.text_field :lname %>
  </div>
  <div class='field'>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class='field'>
    <%= f.label :tel, 'Phone Number' %><br />
    <%= f.text_field :tel %>
  </div>
  <div class='field'>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation, 'Confirmation' %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class='actions'>
    <%= f.submit 'Sign up' %>
  </div>
<% end %>
