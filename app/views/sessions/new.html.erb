<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class='tbl'>
	  <div class='row'>
	  	<div class='cellb'><%= f.label :email %></div>
	    <div class='cell'><%= f.text_field :email %></div>
	  </div>
	  <div class='row'>
	  	<div class='cellb'><%= f.label :password %></div>
	    <div class='cell'><%= f.password_field :password %></div>
	  </div>
		<div class='row'>
	  	<div class='cellb'><%= f.label nil %></div>
	    <div class='cell'><%= f.submit 'Sign in' %></div>
	  </div>
	</div>
<% end %>
<br />
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
