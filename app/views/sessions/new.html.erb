<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field signin">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field signin">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="actions signin">
	<%= f.label nil %>
    <%= f.submit "Sign in" %>
  </div>
<% end %>
<br />
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
