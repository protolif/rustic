%header
	= link_to logo, root_path
	%nav.round.transparent#nav
		%ul
			%li
				= link_to home_icon, root_path
			%li
				= link_to help_icon, help_path
			- if signed_in?
				- if current_user.admin?
					%li
						= link_to users_index_icon, users_path
					%li
						= link_to tickets_index_icon, tickets_path
				%li
					= link_to profile_icon, current_user
				%li
					= link_to settings_icon, edit_user_path(current_user)
				%li
					= link_to logout_icon, signout_path, :method => :delete
			- else
				%li
					= link_to login_icon, signin_path, :remote => true
